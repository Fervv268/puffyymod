<!-- Overlay removed by design (kept as stub to avoid project churn) -->
<Window x:Class="GameBuddyBrain.UI.FloatingOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="FloatingOverlay" Height="0" Width="0"
  WindowStyle="None" AllowsTransparency="False" Background="Transparent" Topmost="False" ShowInTaskbar="False" Visibility="Collapsed">

  <Border Background="Transparent" CornerRadius="8" Padding="0" Margin="0" Visibility="Collapsed">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <!-- Header with page buttons -->
      <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,8">
        <!-- generate 10 page buttons -->
        <UniformGrid Columns="10" Rows="1">
          <Button x:Name="PageBtn1" Content="1" Click="PageBtn_Click" Width="32" Height="28"/>
          <Button x:Name="PageBtn2" Content="2" Click="PageBtn_Click" Width="32" Height="28"/>
          <Button x:Name="PageBtn3" Content="3" Click="PageBtn_Click" Width="32" Height="28"/>
          <Button x:Name="PageBtn4" Content="4" Click="PageBtn_Click" Width="32" Height="28"/>
          <Button x:Name="PageBtn5" Content="5" Click="PageBtn_Click" Width="32" Height="28"/>
          <Button x:Name="PageBtn6" Content="6" Click="PageBtn_Click" Width="32" Height="28"/>
          <Button x:Name="PageBtn7" Content="7" Click="PageBtn_Click" Width="32" Height="28"/>
          <Button x:Name="PageBtn8" Content="8" Click="PageBtn_Click" Width="32" Height="28"/>
          <Button x:Name="PageBtn9" Content="9" Click="PageBtn_Click" Width="32" Height="28"/>
          <Button x:Name="PageBtn10" Content="10" Click="PageBtn_Click" Width="32" Height="28"/>
        </UniformGrid>
      </StackPanel>

      <!-- Pages area -->
      <Grid Grid.Row="1" x:Name="PagesRoot">
        <!-- Page 1: left half controls (placeholders) -->
        <StackPanel x:Name="Page1" Orientation="Vertical" Visibility="Collapsed">
          <TextBlock Text="Page 1 - Core Bot" Foreground="White" FontWeight="Bold" Margin="0,0,0,6" />
          <WrapPanel>
            <Button Content="Start Bot" Width="120" Margin="4" Click="StartBot_Click" />
            <Button Content="Stop Bot" Width="120" Margin="4" Click="StopBot_Click" />
            <Button Content="Collect All" Width="120" Margin="4" Click="CollectAll_Click" />
            <Button Content="Force Prestige" Width="120" Margin="4" Click="ForcePrestige_Click" />
          </WrapPanel>
          <TextBlock Text="Automation groups:" Foreground="White" Margin="6,8,0,4" />
          <StackPanel Orientation="Vertical">
            <ToggleButton x:Name="AutoFarmToggle" Content="AutoFarm" Width="120" Margin="4" />
            <ToggleButton x:Name="AutoPrestigeToggle" Content="AutoPrestige" Width="120" Margin="4" />
            <ToggleButton x:Name="SafeModeToggle" Content="SafeMode" Width="120" Margin="4" />
          </StackPanel>
        </StackPanel>

        <!-- Page 2: secondary actions -->
        <StackPanel x:Name="Page2" Orientation="Vertical" Visibility="Collapsed">
          <TextBlock Text="Page 2 - Actions" Foreground="White" FontWeight="Bold" Margin="0,0,0,6" />
          <WrapPanel>
            <Button Content="Open Chests" Width="120" Margin="4" Click="OpenChests_Click" />
            <Button Content="Buy Best" Width="120" Margin="4" Click="BuyBest_Click" />
            <Button Content="Advance Stage" Width="120" Margin="4" Click="NextStage_Click" />
            <Button Content="Toggle Speed" Width="120" Margin="4" Click="ToggleSpeed_Click" />
          </WrapPanel>
        </StackPanel>

        <!-- Pages 3..10 placeholders -->
        <StackPanel x:Name="Page3" Visibility="Collapsed"><TextBlock Text="Page 3" Foreground="White"/></StackPanel>
        <StackPanel x:Name="Page4" Visibility="Collapsed"><TextBlock Text="Page 4" Foreground="White"/></StackPanel>
        <StackPanel x:Name="Page5" Visibility="Collapsed"><TextBlock Text="Page 5" Foreground="White"/></StackPanel>
        <StackPanel x:Name="Page6" Visibility="Collapsed"><TextBlock Text="Page 6" Foreground="White"/></StackPanel>
        <StackPanel x:Name="Page7" Visibility="Collapsed"><TextBlock Text="Page 7" Foreground="White"/></StackPanel>
        <StackPanel x:Name="Page8" Visibility="Collapsed"><TextBlock Text="Page 8" Foreground="White"/></StackPanel>
        <StackPanel x:Name="Page9" Visibility="Collapsed"><TextBlock Text="Page 9" Foreground="White"/></StackPanel>
        <StackPanel x:Name="Page10" Visibility="Collapsed"><TextBlock Text="Page 10" Foreground="White"/></StackPanel>
      </Grid>
    </Grid>
  </Border>
</Window>
